<%= form_with model: @user do |form|%>

<% if form.object.errors.any? %>
<div>
<% form.object.errors.full_messages.each do |message| %>
<div><%= message %></div>
<%end%>
</div>
<%end%>

    <div>
        <%= form.label :name %>
        <%= form.text_field :name %>
    </div>

    <div>
        <%= form.label :email %>
        <%= form.email_field :email %>
    </div>

    <div>
        <%= form.label :password %>
        <%= form.password_field :password %>
    </div>

    <div>
        <%= form.label :image %>
        <%= form.text_field :image %>
    </div>

    <%= form.button %>
<%end%>