<h1 class= "text-slate-700">Edit Comment</h1>

<%= form_with model: @comment do |form|%>

    <% if form.object.errors.any? %>
        <div>
            <% form.object.errors.full_messages.each do |message| %>
                <div class= "bg-slate-700 rounded-full mb-4">
                    <div class="text-yellow-50 ml-4"><%= message %></div>
                </div>
            <%end%>
        </div>
    <%end%>

    <div class= "grid grid-flow-row-dense grid-rows-2 grid-cols-1 ml-4">

        <div class="col-span-4">
            <%= form.text_area :body, class: "w-full h-full" %>
        </div>

        <div>

            <div class= "mt-4 w-36 focus:outline-none text-white bg-slate-700 hover:bg-slate-500 focus:ring-4 focus:ring-slate-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 m-2 dark:focus:ring-slate-900">
                <%= form.button "Edit Comment" %>
            </div>

        </div>

    </div>


    
<%end%>

<%= button_to "Delete", @comment, method: :delete, data: {turbo_confirm: "Are you sure you want to delete this comment?"}, class: "w-36 ml-6 focus:outline-none text-white bg-slate-700 hover:bg-slate-500 focus:ring-4 focus:ring-slate-300 font-medium rounded-lg text-sm px-5 py-2.5 me-2 m-2 dark:focus:ring-slate-900"%>
