<%= form_with model: @comment do |form|%>

<% if form.object.errors.any? %>
    <div>
        <% form.object.errors.full_messages.each do |message| %>
        <div><%= message %></div>
        <%end%>
    </div>
<%end%>

    <div>
        <%= form.label :body %>
        <%= form.text_area :body %>
    </div>

      <%= button_to "comment", action: "createRequest", controller: "comments" %>
<%end%>