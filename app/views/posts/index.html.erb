<h1 class= "text-slate-700">My Blog</h1>

<div class= "flex justify-end">
    <div class= "flex flex-col">
        <%= link_to "Create Post", create_post_path, class: "text-slate-700" %>
    </div>
</div>

<% @posts.each do |post| %>
    <div class= "bg-slate-700 mt-4 rounded-xl">
        <h2 class= "mt-4"><%= link_to post.title, read_post_path(post.id), class: "text-yellow-50 ml-5" %></h2>
        <h4 class= "text-yellow-50 ml-5 mb-8 font-normal italic"><%= post.body%></h4>
    </div>
<% end %>